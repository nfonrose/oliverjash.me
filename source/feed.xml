---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  >

  <channel>
    <title>Oliver Joseph Ash</title>
    <atom:link href="http://oliverash.me/feed.xml" rel="self" type="application/rss+xml" />
    <link>{{ site.url }}</link>
    <description>Developer and web enthusiast. I write about OOCSS, life, and some JavaScript.</description>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    <language>en</language>
    <copyright>Oliver Joseph Ash</copyright>

    {% for post in site.posts limit:10 %}

      {% capture postUrl %}
        {% if post.rewriteUrl %}{{ post.rewriteUrl }}{% else %}{{ site.url }}{{ post.url }}{% endif %}
      {% endcapture %}

      {% if post.layout == 'photo' %}
        {% capture postImage %}
          <a href="{{ postUrl }}">
            {% if post.resrc == true %}
              <img class="post-image" src="{{ post.img }}" alt="{{ post.imgAlt }}">
            {% endif %}
          </a>
        {% endcapture %}
      {% endif %}

      <item>
        <title>{{ post.title | strip_html | xml_escape }}</title>
        <link>{{ postUrl }}</link>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <guid>{{ postUrl }}</guid>
        <description>
        {% if post.layout == 'photo' %}
          {{ postImage | xml_escape }}
        {% else %}
          {{ post.content | xml_escape }}
        {% endif %}
        </description>
      </item>

    {% endfor %}
  </channel>

</rss>